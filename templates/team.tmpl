{{ define "head" }}
  <title>Team | HackSoc</title>
  <link rel="stylesheet" type="text/css" href="assets/css/team.min.css" />
{{ end }}


{{ define "content" }}


  <section id="team">
  <p>Welcome {{ .User.Email }}!</p>
  
    <h1>Team</h1>
    <div class="members">
      {{ range .Current }}
        <div class="member" style="background-image: url('assets/images/team/{{ .ID }}.small.jpg')">
          <div>
            <h2>{{ .Name }}</h2>
            <p>{{ .Description }}</p>
          </div>
        </div>
      {{ end }}
    </div>
    <div class="separator"></div>
    <h1>Hall of Fame</h1>
    <div class="members">
      {{ range .Past }}
        <div class="member" style="background-image: url('assets/images/team/{{ .ID }}.small.jpg')">
          <div>
            <h2>{{ .Name }}</h2>
            <p>{{ .Description }}</p>
          </div>
        </div>
      {{ end }}
    </div>
  </section>
{{ end }}